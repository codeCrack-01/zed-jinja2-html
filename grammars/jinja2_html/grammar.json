{
  "name": "Jinja2 HTML",
  "scopeName": "text.html.jinja2",
  "fileTypes": [
    "j2",
    "jinja",
    "jinja2", 
    "html.j2",
    "htm.j2",
    "html.jinja",
    "htm.jinja",
    "html.jinja2",
    "htm.jinja2"
  ],
  "patterns": [
    {
      "include": "#jinja-comment"
    },
    {
      "include": "#jinja-statement"
    },
    {
      "include": "#jinja-expression"
    },
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "jinja-comment": {
      "name": "comment.block.jinja2",
      "begin": "\\{#",
      "end": "#\\}",
      "patterns": [
        {
          "name": "comment.block.jinja2",
          "match": ".*?"
        }
      ]
    },
    "jinja-statement": {
      "name": "meta.tag.template.jinja2",
      "begin": "\\{%(-?)\\s*",
      "end": "\\s*(-?)%\\}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.tag.begin.jinja2"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.jinja2"
        }
      },
      "patterns": [
        {
          "include": "#jinja-statement-keywords"
        },
        {
          "include": "#jinja-filters"
        },
        {
          "include": "#jinja-operators"
        },
        {
          "include": "#jinja-functions"
        },
        {
          "include": "#jinja-variables"
        },
        {
          "include": "#jinja-strings"
        },
        {
          "include": "#jinja-numbers"
        }
      ]
    },
    "jinja-expression": {
      "name": "meta.expression.jinja2",
      "begin": "\\{\\{(-?)\\s*",
      "end": "\\s*(-?)\\}\\}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.expression.begin.jinja2"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.expression.end.jinja2"
        }
      },
      "patterns": [
        {
          "include": "#jinja-filters"
        },
        {
          "include": "#jinja-operators"
        },
        {
          "include": "#jinja-functions"
        },
        {
          "include": "#jinja-variables"
        },
        {
          "include": "#jinja-strings"
        },
        {
          "include": "#jinja-numbers"
        }
      ]
    },
    "jinja-statement-keywords": {
      "patterns": [
        {
          "name": "keyword.control.jinja2",
          "match": "\\b(if|elif|else|endif|for|endfor|while|endwhile|break|continue|in|not|and|or|is|import|from|as|with|endwith|without|context|ignore|missing)\\b"
        },
        {
          "name": "keyword.other.jinja2",
          "match": "\\b(block|endblock|extends|include|macro|endmacro|call|endcall|set|endset|raw|endraw|filter|endfilter|autoescape|endautoescape|trans|endtrans|pluralize|do)\\b"
        }
      ]
    },
    "jinja-operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.jinja2",
          "match": "\\b(and|or|not|is|in)\\b"
        },
        {
          "name": "keyword.operator.comparison.jinja2",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.arithmetic.jinja2",
          "match": "(\\+|\\-|\\*|/|//|%|\\*\\*)"
        },
        {
          "name": "keyword.operator.assignment.jinja2",
          "match": "="
        },
        {
          "name": "punctuation.separator.jinja2",
          "match": "(\\||,|:)"
        }
      ]
    },
    "jinja-filters": {
      "patterns": [
        {
          "name": "support.function.filter.jinja2",
          "match": "\\|\\s*(abs|attr|batch|capitalize|center|default|d|dictsort|escape|e|filesizeformat|first|float|forceescape|format|groupby|indent|int|join|last|length|count|list|lower|map|max|min|pprint|random|reject|rejectattr|replace|reverse|round|safe|s|select|selectattr|slice|sort|string|striptags|sum|title|trim|truncate|unique|upper|urlencode|urlize|wordcount|wordwrap|xmlattr|tojson|tojsonfilter)\\b"
        }
      ]
    },
    "jinja-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.jinja2",
          "match": "\\b(range|lipsum|dict|cycler|joiner|namespace)\\b"
        }
      ]
    },
    "jinja-variables": {
      "patterns": [
        {
          "name": "variable.other.jinja2",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.property.jinja2",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.bracket.jinja2",
          "match": "\\[[^\\]]+\\]"
        }
      ]
    },
    "jinja-strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jinja2",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.jinja2",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.jinja2", 
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.jinja2",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "jinja-numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.jinja2",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.jinja2",
          "match": "\\b\\d+\\b"
        }
      ]
    }
  }
}